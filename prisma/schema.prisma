generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  name             String?
  passwordHash     String
  homeAddress      String?
  automationLevel  String    @default("semi")
  friendCode       String?   @unique
  profileImageUrl  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  emailAccounts   EmailAccount[]
  events          CalendarEvent[]
  tasks           Task[]
  taskTopics      TaskTopic[]
  jobs            Job[]
  chatMessages    ChatMessage[]
  resume          Resume?
  activityLog     ActivityLog[]
  preferences     UserPreference?
  emailMessages   EmailMessage[]
  wallet          Wallet?
  rewardTxns      RewardTransaction[]
  purchases       Purchase[]
  customSections  CustomSection[]
  leadGenEntries  LeadGenEntry[]
  friendshipsA    Friendship[]    @relation("FriendshipA")
  friendshipsB    Friendship[]    @relation("FriendshipB")
  socialSettings  SocialSettings?
  productivitySnapshots ProductivitySnapshot[]
  feedPosts       FeedPost[]
  notifications   Notification[]
  courses         Course[]
  assignments     Assignment[]
}

model EmailAccount {
  id           String   @id @default(cuid())
  userId       String
  provider     String
  email        String
  accessToken  String?
  refreshToken String?
  imapPassword String?
  lastSynced   DateTime?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages     EmailMessage[]

  @@unique([userId, email])
}

model EmailMessage {
  id                String       @id @default(cuid())
  userId            String
  emailAccountId    String
  providerId        String
  threadId          String?
  fromAddress       String
  subject           String
  snippet           String?
  receivedAt        DateTime
  isRead            Boolean      @default(false)
  importance        String       @default("low")
  actionItems       Json?
  detectedEvents    Json?
  detectedDeadlines Json?
  aiSummary         String?      @db.Text
  requiresSignup    Boolean      @default(false)
  requiresResponse  Boolean      @default(false)
  signupUrl         String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  account           EmailAccount @relation(fields: [emailAccountId], references: [id], onDelete: Cascade)

  @@unique([emailAccountId, providerId])
  @@index([userId, receivedAt])
}

model CalendarEvent {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  location    String?
  startTime   DateTime
  endTime     DateTime
  isFixed     Boolean  @default(false)
  travelTime  Int?
  source      String?
  sourceRef   String?
  color       String?
  urgency     String   @default("medium")
  dueDate     DateTime?
  estimatedTime Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id            String    @id @default(cuid())
  userId        String
  title         String
  description   String?
  category      String?
  subject       String?
  dueDate       DateTime?
  estimatedTime Int?
  importance    Int       @default(5)
  priorityScore Float?
  isCompleted   Boolean   @default(false)
  completedAt   DateTime?
  source        String?
  topicId       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic         TaskTopic? @relation(fields: [topicId], references: [id], onDelete: SetNull)
}

model TaskTopic {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String?  @default("#6C63FF")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@unique([userId, name])
}

model Job {
  id            String   @id @default(cuid())
  userId        String
  title         String
  company       String
  location      String?
  description   String?  @db.Text
  url           String
  source        String
  matchScore    Float?
  status        String   @default("found")
  customResume  String?
  customCover   String?
  contactName   String?
  contactEmail  String?
  contactTitle  String?
  contactPhone  String?
  appliedAt     DateTime?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Resume {
  id        String   @id @default(cuid())
  userId    String   @unique
  content   String
  fileUrl   String?
  skills    String[]
  keywords  String[]
  education String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String
  content   String
  actions   Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  action      String
  description String
  metadata    Json?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RewardTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Int
  type        String
  sourceRef   String?
  description String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model ShopItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  cost        Int
  available   Boolean  @default(true)
  kind        String   @default("generic")
  config      Json?
  rotating    Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  purchases   Purchase[]
}

model Purchase {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  cost      Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item      ShopItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model CustomSection {
  id        String   @id @default(cuid())
  userId    String
  name      String
  icon      String   @default("folder")
  sortOrder Int      @default(0)
  settings  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries   CustomSectionEntry[]

  @@index([userId])
}

model CustomSectionEntry {
  id         String        @id @default(cuid())
  sectionId  String
  payload    Json
  nextAction DateTime?
  tags       String[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  section    CustomSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index([sectionId])
}

model LeadGenEntry {
  id              String    @id @default(cuid())
  userId          String
  prospect        String
  company         String
  channel         String?
  contactEmail    String?
  contactInstagram String?
  contactLinkedIn String?
  contactPhone    String?
  stage           String    @default("new")
  contactStatus   String?   @default("not_reached")
  nextFollowUp    DateTime?
  nextSteps       String?
  result          String?
  notes           String?
  isClosed        Boolean   @default(false)
  isConfirmed     Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, stage])
  @@index([userId, isClosed])
}

model Friendship {
  id        String   @id @default(cuid())
  userIdA   String
  userIdB   String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userA     User     @relation("FriendshipA", fields: [userIdA], references: [id], onDelete: Cascade)
  userB     User     @relation("FriendshipB", fields: [userIdB], references: [id], onDelete: Cascade)

  @@unique([userIdA, userIdB])
  @@index([userIdA])
  @@index([userIdB])
}

model SocialSettings {
  id                 String   @id @default(cuid())
  userId             String   @unique
  enabled            Boolean  @default(true)
  visibility         String   @default("private")
  promptIntervalHours Int     @default(3)
  lastPromptedAt     DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProductivitySnapshot {
  id          String   @id @default(cuid())
  userId      String
  activity    String
  productiveMinutes Int @default(0)
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model FeedPost {
  id              String   @id @default(cuid())
  userId          String
  ratio           Float
  completedTasks  Int
  productiveMinutes Int
  note            String?
  postedAt        DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([postedAt])
}

model UserPreference {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  school                  String?
  courses                 String[]
  travelMode              String   @default("drive")
  workHoursStart          Int      @default(9)
  workHoursEnd            Int      @default(17)
  breakMinutes            Int      @default(15)
  emailDigestHours        Int      @default(24)
  automationLevelNote     String?
  profileVisibility       String   @default("private")
  profileHeadline         String?
  profileBio              String?
  equippedBannerId        String?
  equippedTitleId         String?
  equippedBorderId        String?
  equippedThemeId         String?
  notifEmailDigest        Boolean  @default(false)
  notifPush               Boolean  @default(false)
  notifMorningBrief       Boolean  @default(false)
  notifMorningHour        Int      @default(8)
  hasCompletedOnboarding  Boolean  @default(false)
  lastBriefingDate        String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  body      String?  @db.Text
  isRead    Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([userId, createdAt])
}

model Course {
  id           String   @id @default(cuid())
  userId       String
  name         String
  code         String?
  instructor   String?
  syllabusText String?  @db.Text
  color        String?  @default("#6C63FF")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignments  Assignment[]

  @@index([userId])
}

model Assignment {
  id          String    @id @default(cuid())
  courseId    String
  userId      String
  title       String
  description String?
  dueDate     DateTime?
  weight      Float?
  grade       Float?
  isCompleted Boolean   @default(false)
  source      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
}
